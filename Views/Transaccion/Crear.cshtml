@model app_parcial.Models.Transaccion

@{
    ViewData["Title"] = "Registrar Remesa";
}

<h2>Registrar Remesa</h2>


<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="Remitente" class="control-label"></label>
        <input asp-for="Remitente" class="form-control" />
        <span asp-validation-for="Remitente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Destinatario" class="control-label"></label>
        <input asp-for="Destinatario" class="form-control" />
        <span asp-validation-for="Destinatario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaisOrigen" class="control-label"></label>
        <input asp-for="PaisOrigen" class="form-control" />
        <span asp-validation-for="PaisOrigen" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaisDestino" class="control-label"></label>
        <input asp-for="PaisDestino" class="form-control" />
        <span asp-validation-for="PaisDestino" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MontoEnviado" class="control-label"></label>
        <input asp-for="MontoEnviado" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="MontoEnviado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TasaCambio" class="control-label"></label>
        <input asp-for="TasaCambio" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="TasaCambio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MonedaOrigen" class="control-label"></label>
        <select asp-for="MonedaOrigen" class="form-control">
            <option value="USD">USD</option>
            <option value="BTC">BTC</option>
        </select>
        <span asp-validation-for="MonedaOrigen" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MonedaDestino" class="control-label"></label>
        <select asp-for="MonedaDestino" class="form-control">
            <option value="USD">USD</option>
            <option value="BTC">BTC</option>
        </select>
        <span asp-validation-for="MonedaDestino" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <input asp-for="Estado" class="form-control" value="Pendiente" readonly />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Registrar Remesa</button>
</form>
